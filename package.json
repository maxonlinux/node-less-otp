    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/node": ">=12.0.0",
    "rollup": ">=2.0.0",
    "ts-node": ">=10.0.0",
    "typescript": ">=4.0.0",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=12.0.0"
